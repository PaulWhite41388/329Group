import RPi.GPIO as GPIO 

import time 

 

# Setup GPIO mode 

GPIO.setmode(GPIO.BCM)  

# Define GPIO pins for input and output 

button_pin = 17  # Example, you need to edit 

led_pin = 18  # Example, you need to edit  

# Set up GPIO pins 

GPIO.setup(button_pin, GPIO.IN, pull_up_down=GPIO.PUD_UP) 

GPIO.setup(led_pin, GPIO.OUT) 

GPIO.output(led_pin, GPIO.LOW) 

class Modes: 

    IMMERSION = 1 

    MANUAL = 2  

# SIMPLE GUI 

print("WIND RESISTANCE") 

print("1. IMMERSION") 

print("2. MANUAL") 

# Get User Input 

mode_choice = input("User Input:") 

# User Choice and beyond 

if mode_choice == str(Modes.IMMERSION): 

    print("IMMERSION Mode Selected.") 

    # Insert IMMERSION mode code below 

    pass 

elif mode_choice == str(Modes.MANUAL): 

    print("Manual Mode Selected.") 

    wind_resistance = input("Enter required wind resistance: ") 

    try: 

        wind_resistance = int(wind_resistance) 

        if 0 <= wind_resistance <= 3: 

            print(f"Wind resistance: {wind_resistance}.") 

            GPIO.output(led_pin, GPIO.HIGH) 

            time.sleep(2)  # Turn on the LED for 2 seconds 

            GPIO.output(led_pin, GPIO.LOW) 

        else: 

            print("Invalid input") 

    except ValueError: 

        print("Invalid input") 

else: 

    print("Invalid mode")  

GPIO.cleanup() 
