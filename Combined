import random
import time

class HVACSystem:
    def __init__(self):
        self.temperature = 22  # Default temperature in Celsius
        self.wind_speed = 0  # Default wind speed in mph
        self.locations = ["Melbourne", "Sydney", "Brisbane", "Perth", "Adelaide"]

    def main_menu(self):
        while True:
            print("Main Menu:")
            print("1. Immersive Mode")
            print("2. Manual Mode")
            print("0. Exit Program")
            choice = input("Enter your choice (0/1/2): ")

            if choice == '1':
                self.immersive_mode()
            elif choice == '2':
                self.manual_mode()
            elif choice == '0':
                print("Exiting the HVAC System. Goodbye!")
                exit()
            else:
                print("Invalid choice. Please select 0, 1, or 2.")

    def immersive_mode(self):
        while True:
            print("Choose a location:")
            for i, location in enumerate(self.locations, start=1):
                print(f"{i}. {location}")
            print("0. Back to Main Menu")

            location_choice = input("Enter your choice (0-5): ")

            if location_choice == '0':
                break
            elif location_choice.isdigit() and 1 <= int(location_choice) <= 5:
                location_index = int(location_choice) - 1
                self.location = self.locations[location_index]
                self.update_weather()
                self.display_status()
            else:
                print("Invalid choice. Please select a valid location (1-5) or 0 to go back.")

    def manual_mode(self):
        while True:
            print("Manual Mode:")
            print("1. Set Temperature")
            print("2. Set Wind Speed")
            print("0. Back to Main Menu")
            choice = input("Enter your choice (0/1/2): ")

            if choice == '0':
                break
            elif choice == '1':
                self.set_temperature()
            elif choice == '2':
                self.set_wind_speed()
            else:
                print("Invalid choice. Please select 0, 1, or 2.")

    def set_temperature(self):
        temperature_input = input("Enter desired temperature in Celsius (press Enter to go back): ")
        if temperature_input.strip() == "":
            return
        try:
            self.temperature = float(temperature_input)
            print(f"Temperature set to {self.temperature:.2f}째C")
        except ValueError:
            print("Invalid input. Please enter a valid temperature.")

    def set_wind_speed(self):
        wind_speed_input = input("Enter desired wind speed in mph (press Enter to go back): ")
        if wind_speed_input.strip() == "":
            return
        try:
            self.wind_speed = float(wind_speed_input)
            print(f"Wind speed set to {self.wind_speed:.2f} mph")
        except ValueError:
            print("Invalid input. Please enter a valid wind speed.")

    def update_weather(self):
        # Simulate fetching weather data for the selected location
        self.temperature = random.uniform(18, 24)  # Simulate temperature range 18째C - 24째C
        self.wind_speed = random.uniform(0, 16)  # Simulate wind speed range 0 - 16 mph

    def display_status(self):
        print(f"Weather in {self.location}:")
        print(f"Temperature: {self.temperature:.2f}째C")
        print(f"Wind Speed: {self.wind_speed:.2f} mph")

    def run(self):
        self.main_menu()

if __name__ == "__main__":
    hvac_system = HVACSystem()
    hvac_system.run()
